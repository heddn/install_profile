{#
/**
 * @file
 * Theme override for a single local action link.
 *
 * Available variables:
 * - attributes: HTML attributes for the wrapper element.
 * - link: A rendered link element.
 *
 * @see template_preprocess_menu_local_action()
 */
#}
{%
    set menu_classes = [
      'border-transparent',
      'text-gray-500',   
      'hover:text-gray-700',
      'hover:border-gray-300',
      'whitespace-nowrap',
      'py-4',
      'px-1',
      'font-medium',
      'text-sm',
      'lg:text-base',      
    ]
  %}
<li{{ attributes.addClass(menu_classes) }}>{{ link }}</li>
